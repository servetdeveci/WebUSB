@{
    ViewData["Title"] = "Anasayfa";
}

<div id="content" class="p-5">
    <h2>Web USB</h2>
    <div class="row  mb-2">
        <div class="col text-right">
            <strong id="algilanan" class="d-inline-block text-success float-left">Algılanan Cihaz Sayisi </strong>
            <button id="izinIste" class="btn btn-info btn-sm d-inline-block" onclick="izinIste()">Genel İzin İste</button>
            <button id="listele" class="btn btn-success btn-sm d-inline-block" onclick="listele()">Cihazları Listele</button>
        </div>

    </div>
    <div class="table-responsive">
        <table border="1" class="table  table-striped p-0">
            <thead>
                <tr>
                    <th>Sıra</th>
                    <th style="width:55px">İşlem</th>
                    <th>Cihaz Adı</th>
                    <th>Vendor Id</th>
                    <th>Seri No</th>
                    <th>Üretici</th>
                    <th>Ürün Id</th>
                </tr>
            </thead>
            <tbody id="devices">
            </tbody>
        </table>
    </div>



    <div id="secilen" style="margin-top:50px;">

    </div>

    <script src="/js/web-usb.js" asp-append-version="true"></script>
</div>

